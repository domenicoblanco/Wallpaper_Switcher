<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_gap"
        app:columnCount="2" >

        <ImageView
            android:id="@+id/lightImage"
            android:layout_width="180dp"
            android:layout_height="290dp"
            android:layout_margin="@dimen/default_gap"
            android:contentDescription="@string/lightDesc"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/lightText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/lightText"
            android:layout_margin="@dimen/default_gap"
            app:layout_column="0"
            app:layout_row="1"/>

        <Button
            android:id="@+id/lightButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/lightButton"
            android:layout_margin="@dimen/default_gap"
            app:layout_column="0"
            app:layout_row="2" />


        <ImageView
            android:id="@+id/darkImage"
            android:layout_width="180dp"
            android:layout_height="290dp"
            android:layout_margin="@dimen/default_gap"
            android:contentDescription="@string/darkDesc"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/darkText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/darkText"
            android:layout_margin="@dimen/default_gap"
            android:gravity="center_horizontal"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/darkButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/darkButton"
            android:layout_margin="@dimen/default_gap"
            app:layout_column="1"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>