<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_gap"
        app:columnCount="2"
        app:rowCount="3"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" >

            <ImageView
                android:id="@+id/lightImage"
                android:layout_width="108dp"
                android:layout_height="208dp"
                android:contentDescription="@string/lightDesc"
                app:layout_column="0"
                app:layout_row="0"
                app:layout_gravity="center_horizontal"
                app:layout_columnWeight="0.5"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/lightText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap"
                android:text="@string/lightText"
                android:textAlignment="center"
                app:layout_column="0"
                app:layout_row="1"
                app:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                app:layout_columnWeight="0.5" />

            <Button
                android:id="@+id/lightButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap"
                android:gravity="center_horizontal"
                android:text="@string/lightButton"
                app:layout_column="0"
                app:layout_row="2"
                app:layout_gravity="center_horizontal"
                app:layout_columnWeight="0.5" />

            <ImageView
                android:id="@+id/darkImage"
                android:layout_width="108dp"
                android:layout_height="208dp"
                android:contentDescription="@string/darkDesc"
                app:layout_column="1"
                app:layout_row="0"
                app:layout_gravity="center_horizontal"
                app:layout_columnWeight="0.5"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/darkText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap"
                android:gravity="center_horizontal"
                android:text="@string/darkText"
                app:layout_column="1"
                app:layout_row="1"
                app:layout_gravity="center_horizontal"
                app:layout_columnWeight="0.5" />

            <Button
                android:id="@+id/darkButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap"
                android:gravity="center_horizontal"
                android:text="@string/darkButton"
                app:layout_column="1"
                app:layout_row="2"
                app:layout_gravity="center_horizontal"
                app:layout_columnWeight="0.5" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>